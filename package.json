{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "css:watch": "npx @tailwindcss/cli -i ./src/input.css -o ./src/output.css --watch",
    "server": "http-server -p 3000 -o",
    "dev": "npm-run-all --parallel css:watch server"
  }
}
